{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "ES2016",
    "lib": ["es2019", "dom"],
    "skipLibCheck": true,
    "declaration": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["src"]
}
